
<% flash.each do |type, message| %>
  <% next unless message.is_a?(String) && message.present? %>
  <% alert_class = case type.to_sym
    when :notice then "alert-success"
    when :alert  then "alert-error"
    else "alert-info"
  end %>
  <div class="alert <%= alert_class %> shadow-lg my-2 z-1">
    <span><%= sanitize message, tags: %w(br) %></span>
  </div>
<% end %>