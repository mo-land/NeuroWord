    <i class="fa-solid fa-tag mr-1 text-base-content/70"></i>
  <% end %>
  <% @question.tags.each do |tag| %>
    <%= link_to truncate(tag.name, length: 10, omission: "â€¦"), search_tag_path(tags_name: tag.name), class: 'tag-badge badge badge-outline badge-info shadow-sm text-xs flex-shrink-0', title: tag.name %>
  <% end %>
</div>