<div class="container mx-auto px-4 py-8">
  <div class="grid grid-cols-1 lg:grid-cols-8">
    <div class="lg:col-start-2 lg:col-span-6">
      <div class="card bg-base-100 shadow-lg p-4">
<h1 class="text-2xl font-bold text-left px-6 pt-6"><%= t('.title') %></h1>
        <div class="card-body">
          <%= form_with model: @request, class: "new_request" do |f| %>
            <%= render 'shared/error_messages', object: f.object %>

            <div class="form-control mb-4">
              <%= f.label :question_title %>
              <%= render 'requests/question_search_form' %>
            </div>
            <div class="form-control mb-4">
              <%= f.label :title %>
              <%= f.text_field :title, class: "input input-bordered w-full" %>
            </div>
            <div class="form-control mb-6">
              <%= f.label :content%>
              <%= f.text_area :content, class: "textarea textarea-bordered w-full", rows: "10" %>
            </div>
            <div class="card-actions justify-end">
              <%= f.submit t('.post'), class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>