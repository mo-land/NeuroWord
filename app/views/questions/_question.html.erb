
<div id="question-id-<%= question.id %>">
  <div class="card w-full bg-base-100 card-s shadow-xl h-full pb-4">
    <div class="card-body items-center">
      <%= link_to game_path(question), class: "btn w-full btn-outline btn-success shadow-xl p-4 items-center text-center flex flex-col justify-center h-full" do %>
        <h4 class="card-title font-mplus1 text-center">
          <%= question.title %>
        </h4>
        <p><%= truncate("#{question.description}", omission: "â€¦") %></p>
      <% end %>

      <div class="flex justify-end items-center text-sm opacity-70 w-full gap-4">
        <div class="flex items-center gap-1">
          <i class="fa-solid fa-user"></i>
          <%= question.user.name %>
        </div>
        <div class="flex items-center gap-1">
        <% if current_user && current_user.own?(question) %>
        <div class="flex justify-end gap-2">
          <%= link_to edit_question_path(question), id: "button-edit-#{question.id}" do %>
            <i class="fa-solid fa-pen text-success"></i>
          <% end %>
          <%= link_to question_path(question), id: "button-delete-#{question.id}", data: { turbo_method: :delete, turbo_confirm: t('defaults.delete_confirm') }  do %>
            <i class="fa-solid fa-trash text-error"></i>
          <% end %>
        </div>
      <% end %>
        </div>
      </div>
    </div>
  </div>
</div>