<div class="container mx-auto px-4">
  <div class="grid grid-cols-1 lg:grid-cols-8">
    <div class="lg:col-start-2 lg:col-span-6">
      <h1 class="text-3xl font-bold mb-6"><%= t('.title') %></h1>
      <%= form_with model: @question, class: "new_question" do |f| %>
        <div class="mb-4">
          <%= f.label :title, class: "block text-sm font-medium mb-1" %>
          <%= f.text_field :title, class: "input input-bordered w-full" %>
        </div>
        <div class="mb-4">
          <%= f.label :description, class: "block text-sm font-medium mb-1" %>
          <%= f.text_area :description, class: "textarea textarea-bordered w-full", rows: "10" %>
        </div>
        <%= f.submit nil, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
