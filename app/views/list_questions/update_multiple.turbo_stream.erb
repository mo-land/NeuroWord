<% if @list_questions %>
  <%= turbo_stream.update "list_questions" do %>
    <%= render partial: "users/list_questions", locals: { list_questions: @list_questions, list_id: @list.id } %>
  <% end %>
<% elsif @context == 'game_records' && @game_records %>
  <% @game_records.each do |game_record| %>
    <%= turbo_stream.replace "game-record-#{game_record.id}" do %>
      <%= render 'shared/favorite_button', question: @question, unique_id: "game-record-#{game_record.id}", context: 'game_records' %>
    <% end %>
    <%= turbo_stream.replace "liked-count-#{@question.id}" do %>
      <%= render 'shared/liked_count', question: @question %>
    <% end %>
  <% end %>
<% else %>
  <%= turbo_stream.replace "favorite-btn-#{@question.id}" do %>
    <%= render 'shared/favorite_button', question: @question %>
  <% end %>
  <%= turbo_stream.replace "liked-count-#{@question.id}" do %>
    <%= render 'shared/liked_count', question: @question %>
  <% end %>
<% end %>
