<div class="container mx-auto px-4 py-8">
  <div class="grid grid-cols-1 lg:grid-cols-12 lg:px-12 gap-6">
    <!-- 左カラム: ユーザー情報とカレンダー -->
    <div class="lg:col-span-4">
      <!-- ユーザー情報 -->
      <div class="flex items-center mb-6">
        <h1 class="text-2xl font-bold"><%= @user.name %></h1>
        <%= link_to edit_user_registration_path, class: "btn btn-outline btn-success btn-sm ml-3" do %>
          <i class="fa-solid fa-pen"></i>
        <% end %>
      </div>

      <% if @user.bio.present? %>
        <p class="text-sm text-base-content/80 mb-6">
          <%= @user.bio %>
        </p>
      <% end %>

      <!-- カレンダーカード -->
      <h3 class="font-semibold mb-2">学習カレンダー</h3>
      <!-- カレンダーチャートのプレースホルダー -->
      <div style="height: 130px; background-color: #f3f4f6; border-radius: 8px; display: flex; align-items: center; justify-content: center;">
        <span class="text-base-content/50">カレンダーチャート</span>
      </div>
    </div>

    <!-- 右カラム: 作成した問題 -->
    <div class="lg:col-span-8">
      <div class="card bg-base-100 border-2 border-current/10">
        <div class="card-body">
          <h2 class="card-title text-xl mb-4">
            <i class="fa-solid fa-clipboard-question"></i>
            作成した問題
          </h2>

          <!-- 問題リスト -->
          <div class="space-y-4">
        <!-- 問題1 -->
        <div class="card bg-base-200">
          <div class="card-body p-4">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <h3 class="font-semibold text-lg">サンプル問題タイトル1</h3>
                <div class="flex gap-2 mt-2">
                  <span class="badge badge-primary">カテゴリー1</span>
                  <span class="badge badge-outline">タグ1</span>
                  <span class="badge badge-outline">タグ2</span>
                </div>
                <p class="text-sm text-base-content/70 mt-2">作成日: 2024-11-01</p>
              </div>
              <div class="text-right">
                <div class="stat-value text-sm">120</div>
                <div class="stat-desc">プレイ回数</div>
              </div>
            </div>
          </div>
        </div>

        <!-- 問題2 -->
        <div class="card bg-base-200">
          <div class="card-body p-4">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <h3 class="font-semibold text-lg">サンプル問題タイトル2</h3>
                <div class="flex gap-2 mt-2">
                  <span class="badge badge-primary">カテゴリー2</span>
                  <span class="badge badge-outline">タグ3</span>
                </div>
                <p class="text-sm text-base-content/70 mt-2">作成日: 2024-10-28</p>
              </div>
              <div class="text-right">
                <div class="stat-value text-sm">85</div>
                <div class="stat-desc">プレイ回数</div>
              </div>
            </div>
          </div>
        </div>

        <!-- 問題3 -->
        <div class="card bg-base-200">
          <div class="card-body p-4">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <h3 class="font-semibold text-lg">サンプル問題タイトル3</h3>
                <div class="flex gap-2 mt-2">
                  <span class="badge badge-primary">カテゴリー3</span>
                  <span class="badge badge-outline">タグ4</span>
                  <span class="badge badge-outline">タグ5</span>
                  <span class="badge badge-outline">タグ6</span>
                </div>
                <p class="text-sm text-base-content/70 mt-2">作成日: 2024-10-15</p>
              </div>
              <div class="text-right">
                <div class="stat-value text-sm">203</div>
                <div class="stat-desc">プレイ回数</div>
              </div>
            </div>
          </div>
        </div>
      </div>

            <!-- 問題がない場合のメッセージ（コメントアウト） -->
            <!-- <div class="text-center py-8 text-base-content/70">
              <i class="fa-solid fa-inbox text-4xl mb-2"></i>
              <p>まだ問題が作成されていません</p>
            </div> -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
