<div class="container mx-auto px-4 py-8">
  <div class="grid grid-cols-1 lg:grid-cols-12 lg:px-12 gap-6">
    <!-- 左カラム: ユーザー情報とカレンダー -->
    <div class="lg:col-span-4 xl:col-span-3 lg:mt-12">
      <!-- ユーザー情報 -->
      <%= render "profile" %>

      <%= render 'calender_chart' %>
    </div>

    <!-- 右カラム: 作成した問題 -->
    <div class="lg:col-span-8 xl:col-span-9">
      <div class="card bg-base-100 border-2 border-current/10">
        <div class="card-body">
          <h2 class="text-xl font-bold mb-4">
            作成した問題
          </h2>

          <!-- 問題リスト -->
          <div class="space-y-4">
            <%= render 'userpage_user_questions' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
