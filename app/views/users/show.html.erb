<div class="container mx-auto px-4 py-8">
  <div class="grid grid-cols-1 lg:grid-cols-12 lg:px-12 gap-6">
    <!-- 左カラム: ユーザー情報とカレンダー -->
    <div class="lg:col-span-4 xl:col-span-3 lg:mt-12">
      <!-- ユーザー情報 -->
      <div class="flex items-center mb-2">
        <h1 class="text-2xl font-bold"><%= @user.name %></h1>
        <% if @user == current_user %>
          <%= link_to edit_user_registration_path, class: "btn btn-outline btn-success btn-sm ml-3" do %>
            <i class="fa-solid fa-pen"></i>
          <% end %>
        <% end %>
      </div>

      <% if @user.bio.present? %>
        <p class="text-sm text-base-content/80 mb-6">
          <%= @user.bio %>
        </p>
      <% end %>

      <%= render 'calender_chart' %>
    </div>

    <!-- 右カラム: 作成した問題 -->
    <div class="lg:col-span-8 xl:col-span-9">
      <div class="card bg-base-100 border-2 border-current/10">
        <div class="card-body">
          <h2 class="text-xl font-bold mb-4">
            作成した問題
          </h2>

          <!-- 問題リスト -->
          <div class="space-y-4">
            <%= render 'userpage_user_questions' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
