<!-- app/views/card_sets/edit.html.erb -->
<div class="container mx-auto px-4 py-8 max-w-4xl">
  <!-- パンくずナビ -->
  <div class="breadcrumbs text-sm mb-6">
    <ul>
      <li><%= link_to "問題一覧", questions_path, class: "link link-hover" %></li>
      <li><%= link_to @question.title, @question, class: "link link-hover" %></li>
      <li class="text-base-content/70">カードセット編集</li>
    </ul>
  </div>

  <!-- ヘッダー -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold mb-2">
      <i class="fas fa-edit text-primary mr-2"></i>
      カードセット編集
    </h1>
    <p class="text-lg text-base-content/70">
      起点「<%= @card_set.origin_word %>」を編集
    </p>
  </div>

  <!-- フォーム -->
  <div class="card bg-base-100 shadow-lg">
    <div class="card-body">
      <%= render "form", question: @question, card_set: @card_set %>
      
      <!-- 戻るボタン -->
      <div class="card-actions justify-start mt-4">
        <%= link_to "戻る", @question, class: "btn btn-ghost" %>
      </div>
    </div>
  </div>
</div>