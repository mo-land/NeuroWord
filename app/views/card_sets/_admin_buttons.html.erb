<% if current_user && current_user.own?(question) %>
  <div class="flex gap-2 mr-2">
    <%= link_to edit_question_card_set_path(question, card_set), class: "btn btn-sm xs:btn-xs lg:btn-md btn-outline btn-accent shadow-sm" do %>
      <i class="fas fa-edit mr-1"></i>
      編集
    <% end %>

    <%= link_to question_card_set_path(question, card_set), class: "btn btn-sm xs:btn-xs lg:btn-md btn-outline btn-error shadow-sm", data: { turbo_method: :delete, turbo_confirm: t('card_sets.card_set.card_set_delete_confirm') } do %>
      <i class="fas fa-trash mr-1"></i>
      削除
    <% end %>
  </div>
<% end %>