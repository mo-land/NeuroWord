<% breadcrumb :games_show, @question %>
<div class="min-h-screen p-4"
     data-controller="game"
     data-game-question-id="<%= @question.id %>"
     data-game-total-matches="<%= @game_data[:relateds].count %>"
     data-game-batch-play-mode="<%= @batch_play_mode %>">

  <!-- ヘッダー -->
  <div class="container mx-auto mb-6">
    <div class="flex flex-wrap basis-1/2 sm:flex-nowrap sm:items-center bg-base-100 rounded-lg p-4 gap-4 lg:gap-2 max-w-3xl">
    <% if has_incompleted_requests?(@question) %>
      <%= render 'requests/incompleted_request_btn', question: @question %>
    <% end %>
      <div class="flex-1 min-w-0">
        <h1 class="text-2xl font-bold font-mplus1 break-words"><%= @question.title %></h1>
        <p class="text-base-content/70 break-words"><%= @question.description %></p>
        <% if @batch_play_mode %>
          <div class="flex gap-2 mt-4">
            <div class="badge badge-secondary mt-2">まとめてプレイ <%= @batch_play_progress %></div>
            <div class="tooltip tooltip-bottom" data-tip="次の問題へ">
              <button class="btn btn-circle content-center" data-action="click->game#showSkipModal">
                <i class="fas fa-forward"></i>
              </button>
            </div>


            <div class="tooltip tooltip-bottom" data-tip="まとめてプレイを終了">
              <button class="btn btn-circle content-center" data-action="click->game#showEndModal">
                <i class="fas fa-stop"></i>
              </button>
            </div>
          </div>
        <% end %>
      </div>

      <div class="flex flex-col gap-2 w-full sm:w-auto">
        <!-- ギブアップボタン（通常モードのみ表示） -->
        <% unless @batch_play_mode %>
          <button class="btn btn-outline btn-error w-full sm:w-auto"
              data-action="click->game#giveUp">
            <i class="fas fa-flag mr-2"></i>
            ギブアップ
          </button>
        <% end %>
        <div class="flex gap-4 text-sm">
          <div>
            <span class="font-semibold">正解数:</span>
            <span class="text-error font-bold" data-game-target="score">0</span>/<%= @game_data[:relateds].count %>
          </div>
          <div>
            <span class="font-semibold">時間:</span>
            <span class="text-success font-bold" data-game-target="timer">00:00</span>
          </div>
        </div>
      </div>
    </div>
  </div>


  <!-- 起点カード群（上部） -->
  <div class="container mx-auto mb-8">
    <h2 class="text-xl font-bold font-mplus1 mb-4 text-center">
  <i class="fas fa-star text-warning mr-2"></i>
  起点カード
    </h2>
    
    <div class="grid grid-cols-2 md:grid-cols-<%= [@game_data[:origins].count, 5].min %> gap-2 justify-center">
      <% @game_data[:origins].each do |origin_card| %>
        <div class="origin-card card bg-gradient-to-br from-primary to-primary-focus text-primary-content shadow-xl cursor-pointer transform transition-all duration-200 hover:scale-105" 
             data-game-target="originCard"
             data-set-id="<%= origin_card[:set_id] %>"
             data-action="click->game#selectOrigin">
          <div class="card-body text-center">
            <h3 class="card-title justify-center text-sm lg:text-lg"><%= origin_card[:word] %></h3>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- 関連語カード群（下部） -->
  <div class="container mx-auto">
    <h2 class="text-xl font-bold mb-4 font-mplus1 text-center">
      <i class="fas fa-tags text-secondary mr-2"></i>
      関連語カード（上の起点カードの仲間を探そう！）
    </h2>
    
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-2">
      <% @game_data[:relateds].each do |related_card| %>
        <div class="related-card card bg-gradient-to-br from-secondary to-secondary-focus text-secondary-content shadow-xl cursor-pointer transform transition-all duration-200 hover:scale-105" 
             data-game-target="relatedCard"
             data-set-id="<%= related_card[:set_id] %>"
             data-word="<%= related_card[:word] %>"
             data-action="click->game#selectRelated">
          <div class="card-body text-center py-4">
            <h3 class="text-sm font-bold"><%= related_card[:word] %></h3>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- ゲーム説明 -->
  <div class="container mx-auto mt-12 lg:flex lg:gap-4">
    <div class="alert alert-info lg:flex-1">
      <i class="fas fa-info-circle"></i>
      <div>
        <p class="font-bold">遊び方</p>
        <p>1. 上部の起点カードをクリック → 2. その仲間の関連語をすべて選択 → 3. 次の起点カードを選択</p>
        <p class="text-sm mt-1">同じ起点カードの関連語をすべて選び終えたら、次の起点カードを選択できます</p>
      </div>
    </div>

    <div class="alert alert-dash max-sm:alert-vertical alert-warning text-sm font-bold mt-4 lg:mt-0">
      <i class="fa-solid fa-lightbulb"></i>
      問題の誤りを発見された方は、修正依頼投稿ができます。<br>
      ※ ログインが必要です。
      <%= render 'requests/request_btn' %>
    </div>
  </div>

  <!-- メッセージ表示エリア -->
  <div class="fixed bottom-4 left-1/2 transform -translate-x-1/2 z-50 w-[90vw] max-w-xs sm:max-w-md">
    <div data-game-target="message" class="alert shadow-lg hidden text-center break-words">
      <span data-game-target="messageText"></span>
    </div>
  </div>

  <!-- ゲーム完了モーダル -->
  <div class="modal" data-game-target="completionModal">
    <div class="modal-box">
      <h3 class="font-bold text-lg">🎉 ゲーム完了！</h3>
      <p class="py-4">
        全ての仲間を見つけました！<br>
        スコア: <span data-game-target="finalScore"></span>/<%= @game_data[:relateds].count %><br>
        時間: <span data-game-target="finalTime"></span>
      </p>
      <div class="modal-action">
        <a href="/game_records/<%= @question.id %>" class="btn btn-primary">
          <i class="fas fa-chart-line mr-2"></i>
          結果詳細を見る
        </a>
        <%= link_to "問題一覧に戻る", questions_path,
                    class: "btn btn-ghost" %>
      </div>
    </div>
  </div>

  <!-- まとめてプレイモード：スキップ確認モーダル -->
  <% if @batch_play_mode %>
    <div class="modal" data-game-target="skipModal">
      <div class="modal-box">
        <h3 class="font-bold text-lg">⚠️ 次の問題にスキップ</h3>
        <p class="py-4">
          この問題をスキップして次の問題に進みますか？
        </p>
        <div class="modal-action gap-2">
          <button class="btn btn-primary" data-action="click->game#skipToNext">
            <i class="fas fa-forward mr-2"></i>
            スキップ
          </button>
          <button class="btn btn-ghost" data-action="click->game#closeSkipModal">
            キャンセル
          </button>
        </div>
      </div>
    </div>

    <!-- まとめてプレイモード：終了確認モーダル -->
    <div class="modal" data-game-target="endModal">
      <div class="modal-box">
        <h3 class="font-bold text-lg">⚠️ まとめてプレイを終了</h3>
        <p class="py-4">
          まとめてプレイを終了して結果画面に進みますか？
        </p>
        <div class="modal-action gap-2">
          <button class="btn btn-error" data-action="click->game#endBatchPlay">
            <i class="fas fa-stop mr-2"></i>
            終了
          </button>
          <button class="btn btn-ghost" data-action="click->game#closeEndModal">
            キャンセル
          </button>
        </div>
      </div>
    </div>
  <% end %>
</div>