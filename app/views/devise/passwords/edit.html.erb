<div class="max-w-md w-full mx-auto bg-base-100 p-4 sm:p-6">
  <h1 class="text-3xl font-bold mb-6 text-center">
    <%= t('.change_your_password') %>
  </h1>

  <div class="max-w-md w-full mx-auto bg-base-200  p-4 sm:p-6 rounded-xl shadow-lg">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <fieldset class="fieldset">
        <%= f.label t('.new_password'), class: "fieldset-legend" %>
        <% if @minimum_password_length %>
          <p>(<%= t('.alphanumeric') %> <%= @minimum_password_length %> <%= t('.characters_minimum') %>)</p>
        <% end %>
        <%= f.password_field :password, autofocus: true, class: "input w-full mx-auto", placeholder: "パスワードを入力", autocomplete: "new-password" %>
      </fieldset>

      <fieldset class="fieldset mt-4">
        <%= f.label t('.confirm_new_password'), class: "fieldset-legend" %>
        <%= f.password_field :password_confirmation, class: "input w-full mx-auto", placeholder: "もう1度パスワードを入力", autocomplete: "new-password" %>
      </fieldset>

      <div class="actions my-8 text-sm">
        <%= f.submit t('.change_my_password'), class: "btn btn-primary w-full mx-auto" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
