<div class="text-sm text-center mt-6">
<%- if controller_name != 'sessions' %>
  <%= link_to t('.sign_in'), new_session_path(resource_name), class: "link text-base-content/60 hover:text-base-content" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="mt-2"></div>
  <%= link_to t('.sign_up'), new_registration_path(resource_name), class: "link text-base-content/60 hover:text-base-content" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="mt-2"></div>
  <%= link_to t('.forgot_your_password'), new_password_path(resource_name), class: "link text-base-content/60 hover:text-base-content mt-2" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="mt-2"></div>
  <%= link_to t('.didn_t_receive_confirmation_instructions?'), new_confirmation_path(resource_name), class: "link text-base-content/60 hover:text-base-content" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="mt-2"></div>
  <%= link_to t('.didn_t_receive_unlock_instructions'), new_unlock_path(resource_name), class: "link text-base-content/60 hover:text-base-content" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <div class="py-8">------------または------------</div>
    <%= button_to omniauth_authorize_path(resource_name, :google_oauth2),
        class: "btn bg-white text-black border-[#e5e5e5]",
        data: { turbo: false } do %>
      <svg aria-label="Google logo" width="16" height="16" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><g><path d="m0 0H512V512H0" fill="#fff"></path><path fill="#34a853" d="M153 292c30 82 118 95 171 60h62v48A192 192 0 0190 341"></path><path fill="#4285f4" d="m386 400a140 175 0 0053-179H260v74h102q-7 37-38 57"></path><path fill="#fbbc02" d="m90 341a208 200 0 010-171l63 49q-12 37 0 73"></path><path fill="#ea4335" d="m153 219c22-69 116-109 179-50l55-54c-78-75-230-72-297 55"></path></g></svg>
      <%= t('.login_with_Google') %>
    <% end %>
<% end %>
</div>
